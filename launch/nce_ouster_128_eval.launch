<launch>
<!-- Launch file for ouster OS0-128 LiDAR -->

    <arg name="rviz" default="false" />
    <param name="/use_sim_time" value="true" />

    <rosparam command="load" file="$(find ig_lio)/config/nce_ouster_128.yaml" />
    <node pkg="ig_lio" type="ig_lio_node" name="ig_lio_node" output="screen" />

    <group if="$(arg rviz)">
    <node launch-prefix="nice" pkg="rviz" type="rviz" name="rviz" args="-d $(find ig_lio)/rviz_cfg/lio_show.rviz" />
    </group>

</launch>

