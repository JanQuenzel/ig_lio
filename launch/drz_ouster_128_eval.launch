<launch>

    <arg name="rviz" default="false" />
    <param name="/use_sim_time" value="true" />

    <rosparam command="load" file="$(find ig_lio)/config/drz_ouster_128.yaml" />
    <node pkg="ig_lio" type="ig_lio_node" name="ig_lio_node" output="screen" />

    <group if="$(arg rviz)">
    <node launch-prefix="nice" name="rviz" pkg="rviz" type="rviz" args="-d $(find ig_lio)/rviz/lio_show.rviz" required="true" />
    </group>

</launch>

